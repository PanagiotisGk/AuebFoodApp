<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Κατάσταση όταν το κουμπί είναι "pressed" -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#0e144f"/> <!--  όταν πατηθεί -->
            <corners android:radius="26dp"/>  <!-- Γωνίες πιο στρογγυλεμένες όταν είναι πατημένο -->
            <padding android:left="16dp" android:right="16dp" android:top="10dp" android:bottom="10dp"/>
        </shape>
    </item>

    <!-- Κατάσταση όταν το κουμπί είναι "focused" -->
    <item android:state_focused="true">
        <shape>
            <solid android:color="#0e344f"/> <!--  όταν έχει focus -->
            <corners android:radius="16dp"/>  <!-- Στρογγυλεμένες γωνίες όταν έχει focus -->
            <padding android:left="16dp" android:right="16dp" android:top="10dp" android:bottom="10dp"/>
        </shape>
    </item>

    <!-- Κατάσταση όταν το κουμπί δεν είναι τίποτα από τα παραπάνω -->
    <item>
        <shape>
            <solid android:color="#CCCCCC"/> <!--  όταν δεν είναι πατημένο ή εστιασμένο -->
            <corners android:radius="0dp"/>   <!-- Κανονικές γωνίες όταν είναι κανονικό -->
            <padding android:left="16dp" android:right="16dp" android:top="10dp" android:bottom="10dp"/>
        </shape>
    </item>
</selector>